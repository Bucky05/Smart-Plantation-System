<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/green">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:elevation="10dp"
        android:src="@drawable/plantprofile"
        android:layout_marginBottom="-30dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/plantNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomato"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black_green"/>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:layout_marginStart="50dp"
    android:src="@drawable/line"/>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19%"
            android:textStyle="bold"
            android:textColor="@color/black_green"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black_green"/>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="36 min"
            android:textStyle="bold"
            android:textColor="@color/black_green"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Remaining"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black_green"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="40dp"
        android:layout_marginBottom="-25dp"
        app:cardElevation="50dp"


        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="74%"

                    android:textColor="@color/black_green"
                    android:textSize="34sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soil Moisture"
                    android:textSize="25dp"

                    android:textColor="@color/black_green"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="100dp"
                android:layout_marginStart="25dp"
                android:background="@color/green"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24Â°"

                    android:textColor="@color/black_green"
                    android:textSize="34sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textSize="25dp"

                    android:textColor="@color/black_green"/>
            </LinearLayout>
        </LinearLayout>
            
        <com.google.android.material.button.MaterialButton

            android:id="@+id/singUpBtn"
            android:layout_width="125dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="200dp"
            android:layout_marginLeft="140dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Water"
            android:textAlignment="center"
            android:textColor="@color/dark_green"

            app:cornerRadius="40dp"
            app:layout_constraintEnd_toEndOf="@+id/passwordTil"
            app:layout_constraintStart_toStartOf="@+id/passwordTil"
            app:layout_constraintTop_toBottomOf="@+id/passwordTil" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>